---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta
      name="description"
      content="A collection of useful links for developers."
    />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />

    <title>
      {title}
    </title>
  </head>

  <body>
    <div class="gradient-bg"></div>
    <slot />
  </body>
</html>

<style>
    .gradient-bg {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -2;
        width: 100vw;
        height: 100vh;
        transform: rotate(180deg);
        background-color: white;
        background-image: radial-gradient(
        60% 120% at 50% 50%,
        hsla(0, 0%, 100%, 0) 0,
        rgba(252, 205, 238, 0.5) 100%
    )
  }
</style>
